<?xml version="1.0" encoding="utf-8"?>
<cs.c301.project.Utilities.TagListLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tagPanel"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#B2C0C1"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/tagTextViewWrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tagTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="Tags"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#647373" />
    </LinearLayout>

    <EditText
        android:id="@+id/tagEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:hint="Type here to filter tags." >
    </EditText>

    <ListView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tagListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:padding="5dp"
        android:textSize="16sp"
        android:textColor="#647373" >
    </ListView>

    <LinearLayout
        android:id="@+id/tagButtonPaneWrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tagButtonPane"
            android:layout_width="fill_parent"
            android:layout_height="54dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/addtag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.37"
                android:text="Add Tag" />

            <Button
                android:id="@+id/searchtag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.19"
                android:text="Advanced Search" />
        </LinearLayout>
    </LinearLayout>

</cs.c301.project.Utilities.TagListLayout>